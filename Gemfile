source 'https://rubygems.org'

## RAILS GEMS AND RELATED
gem 'rails', '~> 7.0.0'
gem 'puma'

## DATABASES ##
gem 'mysql2'

## JAVASCRIPT AND JSON
gem "importmap-rails"

## CSS ##
gem 'bootstrap'
gem "sassc-rails"

## TOOLS AND UTILITIES
gem 'simple_form'
gem 'devise'
gem 'config'
