<% page_title "Login" %>

<div class="text-center mt-5">
  <%= render "devise/shared/error_messages" %>

  <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :username, label: false,
                  required: true,
                  autofocus: true,
                  input_html: {
                    class: "form-control username", autocomplete: false, placeholder: "Library Barcode",
                    aria: { label: "username"}
                  } %>
      <%= f.input :password, label: false,
                  required: true,
                  input_html: {
                    class: "form-control password", autocomplete: false, placeholder: "Password",
                    aria: { label: "password"}  
                  } %>
    </div>

    <%= content_tag(:div, flash[:error], :class=>"alert alert-danger") if flash[:error] %>
    <%= content_tag(:div, flash[:alert], :class=>"alert alert-danger") if flash[:alert] %>

    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>

    <div class="mt-4 border-top pt-2">
      <%= link_to "Login with Passport York", ppy_login_path,  class: 'text-muted' %>
    </div>
  <% end %>
</div>
